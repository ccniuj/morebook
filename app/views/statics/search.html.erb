<div class="main-content">
<!--  begin portfolio section  -->
    <section class="bg-light-gray">
        <div class="container">

            <div class="headline text-center">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <h2 class="section-title">搜尋結果</h2>
                        <p class="section-sub-title">
                        </p> <!-- /.section-sub-title -->
                    </div>
                </div>
            </div> <!-- /.headline -->
            <%= will_paginate @paginate if @paginate %>
            <div class="portfolio-item-list">
                <div class="row">
            
                    <% @results.each do |result| %>
                            <div class="col-md-3 col-sm-6">       
                                <div class="portfolio-item">       
                                    <div class="item-image">       
                                        <a href="<%= book_static_path(result[:product_id]) %>">
                                            <img src="<%= result[:cover_url] %>" class="img-responsive center-block" alt="portfolio1">
                                            <div><span><i class="fa fa-plus"></i></span></div>
                                        </a>
                                    </div>       

                                    <div class="item-description">       
                                        <div class="row">       
                                            <div class="col-xs-10 col-xs-offset-1">
                                                <span class="item-name">       
                                                    <%= result[:title] %>       
                                                </span>       
                                                <span>       
                                                    分類
                                                </span>       
                                            </div>       
                                            <div class="col-xs-6 col-xs-offset-3">       
                                                <span class="like">       
                                                    <i class="fa fa-heart-o"></i>       
                                                    99       
                                                </span>       
                                            </div>       
                                        </div>       
                                    </div> <!-- end of /.item-description -->       
                                </div> <!-- end of /.portfolio-item -->       
                            </div>   
                    <% end %>
                </div>
            </div> <!-- end of portfolio-item-list -->
            
            <%= will_paginate @paginate if @paginate %>

        </div>
    </section> 
    <!--   end of portfolio section  -->
</div>