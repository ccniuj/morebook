<%= form_tag add_book_to_shelf_statics_path, :method => 'post' do %>
  <%= hidden_field_tag 'isbn', @book[:isbn] %>
  <%= hidden_field_tag 'book_data_url', request.original_url %>
  <% if current_user %>
    <% current_user.shelves.all.each do |shelf| %>
      <%= check_box_tag "shelves_id[]", shelf.id, 
        shelf.books.map{|b|b.isbn}.include?(@book[:isbn]) %><%= shelf.name %><br/>
      <% end %>
    <%= submit_tag '新增到我的書櫃', :class => 'form-control' %>
  <% else %>
    您尚未登入，<br/><%= submit_tag '登入以將這本書新增至您的書櫃', :class => 'form-control' %>
  <% end %>
<% end %>
