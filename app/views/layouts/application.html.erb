                                  </li>
                                  <li>
                                    <%= link_to '登出', destroy_user_session_path, :method => 'delete' %>
                                  </li>
                                </ul>  <!-- end of /.dropdown-menu -->
                              </li> <!-- end of /.dropdown -->
                            <% else %>
                              <li class="dropdown">
                                <%= link_to new_user_session_path, :class => 'dropdown-toggle' do %>
                                  <span>登入</span>
                                <% end %>
                              </li> <!-- end of /.dropdown -->
                            <% end %>
                        </ul>
                    </div><!-- nav links -->
                    
                </div><!-- /.container -->
            </nav>
            <!-- site-navigation end -->

            <%= yield %>

            <!-- footer-navigation start -->  
