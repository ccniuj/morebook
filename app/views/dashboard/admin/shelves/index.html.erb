<% content_for :header do %>
  <h3>This is header</h3>
<% end %>

<h1>書櫃列表</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>名稱</th>
      <th>管理</th>
    </tr>
  </thead>

  <tbody>
    <% @shelves.each do |shelf| %>
      <tr>
        <td><%= shelf.id %></td>
        <td><%= shelf.name %></td>
        <td>
          <%= link_to '編輯', edit_dashboard_admin_shelf_path(shelf) %>
          <%= link_to '刪除', dashboard_admin_shelf_path(shelf), method: :delete, data: { confirm: '你確定嗎？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新增書櫃', new_dashboard_admin_shelf_path %>

<% content_for :footer do %>
  <h3>This is footer</h3>
<% end %>