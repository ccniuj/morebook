<%= link_to '新增使用者', new_dashboard_admin_user_path %>
<div class="box">
  <div class="box-header">
    <h3 class="box-title">使用者列表</h3>
  </div><!-- /.box-header -->
  <div class="box-body no-padding">
    <table class="table table-striped">
      <tr>
        <th>ID</th>
        <th>名稱</th>
        <th>Email</th>
        <th>管理</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to '編輯', edit_dashboard_admin_user_path(user) %>
            <%= link_to '刪除', dashboard_admin_user_path(user), method: :delete, data: { confirm: '你確定嗎？' } %>
          </td>
        </tr>
      <% end %>
    </table>
  </div><!-- /.box-body --> 
</div><!-- /.box -->
