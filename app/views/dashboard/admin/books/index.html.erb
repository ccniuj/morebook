<%= link_to '新增書本', new_dashboard_admin_book_path %>
<div class="box">
  <div class="box-header">
    <h3 class="box-title">書本列表</h3>
  </div><!-- /.box-header -->
  <div class="box-body no-padding">
    <table class="table table-striped">
      <tr>
        <th>ID</th>
        <th>名稱</th>
        <th>分類</th>
        <th>封面</th>
        <th>管理</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.name %></td>
          <td><%= book.tag.name %></td>
          <td><%= image_tag book.cover.url(:thumb), :width => '100', :height => '100' %></td>
          <td>
            <%= link_to '編輯', edit_dashboard_admin_book_path(book) %>
            <%= link_to '刪除', dashboard_admin_book_path(book), method: :delete, data: { confirm: '你確定嗎？' } %>
          </td>
        </tr>
      <% end %>
    </table>
  </div><!-- /.box-body --> 
</div><!-- /.box -->
