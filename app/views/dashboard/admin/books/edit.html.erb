<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">編輯書本</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <%= form_for(@book, {:url => dashboard_admin_book_path, :method => 'patch'}) do |f| %>
      <div class='form-group'>
        封面<%= f.file_field :cover, :class => 'form-control' %>
        名稱<%= f.text_field :name, :class => 'form-control' %>
        分類<br/>
        <% Tag.all.each do |tag| %>
          <%= tag.name %><%= check_box_tag "tags_id[]", tag.id, 
                             @book.tags.map{|t|t.name}.include?(tag.name) %><br/>
        <% end %>
        作者<%= f.text_field :author, :class => 'form-control' %>
        簡介<%= f.text_area :description, :class => 'form-control' %>
      </div>
      <%= f.submit :class => 'btn btn-primary', :value => '送出' %>
    <% end %>
  </div>
</div>
