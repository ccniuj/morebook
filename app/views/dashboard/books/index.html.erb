<%= link_to '新增書本', new_dashboard_book_path %>
<div class="box">
  <div class="box-header">
    <h3 class="box-title">書本列表</h3>
  </div><!-- /.box-header -->
  <div class="box-body no-padding">
    <table class="table table-striped">
      <tr>
        <th>ID</th>
        <th>封面</th>
        <th>名稱</th>
        <th>分類</th>
        <th>作者</th>
        <th>管理</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td>
            <% if book.pictures.any? %>
              <%= image_tag book.pictures.first.image.url(:thumb) %>
            <% end %>
          </td>
          <td><%= book.name %></td>
          <td width='100'>
            <% book.tags.each do |tag| %>
              <%= tag.name %><br/>
            <% end %>
          </td>
          <td width='100'><%= book.author %></td>
          <td>
            <%= link_to '編輯', edit_dashboard_book_path(book) %>
            <%= link_to '移除', dashboard_book_path(book), method: :delete, data: { confirm: '你確定要將這本書從所有書櫃中移除嗎？' } %>
          </td>
        </tr>
      <% end %>
    </table>
  </div><!-- /.box-body --> 
</div><!-- /.box -->
