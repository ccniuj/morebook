<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">編輯個人資訊</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <%= form_for(@profile, {:url => dashboard_profile_path, :method => 'patch'}) do |f| %>
      <div class='form-group'>
        頭像<%= f.file_field :selfie, :class => 'form-control' %>
        使用者名稱<%= f.text_field :name, :class => 'form-control' %>
        中文姓名<%= f.text_field :name_ch, :class => 'form-control' %>
        電子信箱<%= f.text_field :email, :class => 'form-control' %>
        電話<%= f.text_field :number, :class => 'form-control' %>
        地址<%= f.text_field :address, :class => 'form-control' %>
        簡介<%= f.text_area :description, :class => 'form-control' %>
      </div>
      <%= f.submit :class => 'btn btn-primary', :value => '送出' %>
    <% end %>
  </div>
</div>